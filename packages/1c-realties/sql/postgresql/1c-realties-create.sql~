-- /package/c1-realties/sql/postgresql/c1-realties-create.sql


------------------------------------
-- Table c1_annonce
------------------------------------
CREATE TABLE annonces(
       realty_id		integer,
       
       				CONSTRAINT realties_annonce_id_pk PRIMARY KEY,
       ref_code			varchar(255),
       type_of_transaction	varchar(10),
       type_of_property		varchar(10),
       rent_price		numeric,		
       rent_taxes		numeric,		
       available_date		timestamptz,
       room_qty			integer,
       lavatory_qty		integer,
       bathroom_qty		integer,
       floor_qty		integer,
       surface			numeric,
       type_of_announcer	varchar(10),
       status			varchar(10),
       parent_id		integer
       				CONSTRAINT annonces_realty_id_fk
				REFERENCES realties ON DELETE CASCADE
				CONSTRAINT annonces_realty_id_un UNIQUE 
);

